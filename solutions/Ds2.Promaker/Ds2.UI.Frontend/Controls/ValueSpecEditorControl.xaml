<UserControl x:Class="Ds2.UI.Frontend.Controls.ValueSpecEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Condition Type -->
        <Grid Grid.Row="0" Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="형태:"
                       VerticalAlignment="Center"
                       FontSize="11"
                       Foreground="{DynamicResource SecondaryTextBrush}"/>
            <ComboBox Grid.Column="1" x:Name="ConditionTypeCombo"
                      FontSize="11"
                      SelectedIndex="0"
                      SelectionChanged="OnConditionTypeChanged">
                <ComboBoxItem Content="Single (단일값)"/>
                <ComboBoxItem Content="Multiple (복수값, 쉼표 구분)"/>
                <ComboBoxItem Content="Ranges (범위, 읽기 전용)"/>
            </ComboBox>
        </Grid>

        <!-- Row 1: Data Type -->
        <Grid Grid.Row="1" Margin="0,0,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="타입:"
                       VerticalAlignment="Center"
                       FontSize="11"
                       Foreground="{DynamicResource SecondaryTextBrush}"/>
            <ComboBox Grid.Column="1" x:Name="DataTypeCombo"
                      FontSize="11"
                      SelectionChanged="OnDataTypeChanged">
                <ComboBoxItem Content="Undefined"/>
                <ComboBoxItem Content="bool (1비트)"/>
                <ComboBoxItem Content="int8 (부호있는 1바이트)"/>
                <ComboBoxItem Content="int16 (부호있는 2바이트)"/>
                <ComboBoxItem Content="int32 (부호있는 4바이트)"/>
                <ComboBoxItem Content="int64 (부호있는 8바이트)"/>
                <ComboBoxItem Content="uint8 (부호없는 1바이트)"/>
                <ComboBoxItem Content="uint16 (부호없는 2바이트)"/>
                <ComboBoxItem Content="uint32 (부호없는 4바이트)"/>
                <ComboBoxItem Content="uint64 (부호없는 8바이트)"/>
                <ComboBoxItem Content="float32 (단정밀도 4바이트)"/>
                <ComboBoxItem Content="float64 (배정밀도 8바이트)"/>
                <ComboBoxItem Content="string (문자열)"/>
            </ComboBox>
        </Grid>

        <!-- Row 2: Value input -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="값:"
                       VerticalAlignment="Center"
                       FontSize="11"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       x:Name="ValueLabel"/>
            <Grid Grid.Column="1">
                <!-- Bool: True/False 라디오 버튼 -->
                <StackPanel x:Name="BoolButtonsPanel"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                    <RadioButton x:Name="TrueRadio"
                                 Margin="0,0,12,0"
                                 FontSize="11"
                                 Foreground="{DynamicResource PrimaryTextBrush}">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,4,0" VerticalAlignment="Center"/>
                            <TextBlock Text="True" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton x:Name="FalseRadio"
                                 FontSize="11"
                                 Foreground="{DynamicResource PrimaryTextBrush}">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#F44336" Margin="0,0,4,0" VerticalAlignment="Center"/>
                            <TextBlock Text="False" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
                <!-- 숫자/문자 입력 -->
                <TextBox x:Name="ValueTextBox"
                         Padding="6,4"
                         Visibility="Collapsed"
                         ToolTip="Single: 999 / Multiple: 1, 2, 3"/>
                <!-- Undefined 안내 -->
                <TextBlock x:Name="UndefinedHint"
                           Text="(조건 없음)"
                           FontSize="11"
                           FontStyle="Italic"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           Visibility="Visible"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
