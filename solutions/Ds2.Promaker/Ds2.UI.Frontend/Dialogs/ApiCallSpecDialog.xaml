<Window x:Class="Ds2.UI.Frontend.Dialogs.ApiCallSpecDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:Ds2.UI.Frontend.Controls"
        Title="ApiCall Spec 편집"
        Width="420"
        Height="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ApiCall name display -->
            <TextBlock Grid.Row="0"
                       x:Name="ApiCallNameText"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       Margin="0,0,0,10"/>

            <!-- Out 대상 -->
            <Border Grid.Row="1"
                    Background="{DynamicResource TertiaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="10,8"
                    Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Out 대상"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBrush}"
                               Margin="0,0,0,6"/>
                    <ctrl:ValueSpecEditorControl x:Name="OutSpecEditor"/>
                </StackPanel>
            </Border>

            <!-- In 대상 -->
            <Border Grid.Row="2"
                    Background="{DynamicResource TertiaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="10,8"
                    Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="In 대상"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBrush}"
                               Margin="0,0,0,6"/>
                    <ctrl:ValueSpecEditorControl x:Name="InSpecEditor"/>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="확인"
                        Style="{StaticResource DarkButton}"
                        Padding="16,4"
                        Margin="0,0,4,0"
                        IsDefault="True"
                        Click="Ok_Click"/>
                <Button Content="취소"
                        Style="{StaticResource DarkButton}"
                        Padding="16,4"
                        IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
