<Window x:Class="Ds2.UI.Frontend.Dialogs.ValueSpecDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:Ds2.UI.Frontend.Controls"
        Title="Edit ValueSpec"
        Width="360"
        Height="260"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="ValueSpec"
                       Margin="0,0,0,6"
                       FontSize="11"
                       Foreground="{DynamicResource SecondaryTextBrush}"/>

            <ctrl:ValueSpecEditorControl Grid.Row="1"
                                         x:Name="SpecEditor"
                                         Margin="0,0,0,4"/>

            <Grid Grid.Row="3"/>

            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button Content="확인"
                        Style="{StaticResource DarkButton}"
                        Padding="12,4"
                        Margin="0,0,4,0"
                        Click="Apply_Click"/>
                <Button Content="취소"
                        Style="{StaticResource DarkButton}"
                        Padding="12,4"
                        IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
