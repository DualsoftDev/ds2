<Window x:Class="Ds2.UI.Frontend.Dialogs.ArrowTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="화살표 유형 선택"
        Width="450"
        Height="460"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Window.Resources>
        <Style x:Key="ArrowOptionRadio" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="OptionBorder"
                                Background="{DynamicResource TertiaryBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="10,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="22"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Width="16" Height="16" Margin="3,0,3,0" VerticalAlignment="Top">
                                    <Ellipse Stroke="{DynamicResource AccentBrush}" StrokeThickness="2"/>
                                    <Ellipse x:Name="Dot"
                                             Width="8"
                                             Height="8"
                                             Fill="{DynamicResource AccentBrush}"
                                             Visibility="Collapsed"/>
                                </Grid>
                                <ContentPresenter Grid.Column="1"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Dot" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="OptionBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="OptionBorder" Property="Background" Value="{DynamicResource SelectedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="OptionBorder" Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="OptionBorder" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource SecondaryBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="연결 형식:"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>

            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <RadioButton x:Name="StartRadio" GroupName="ArrowType" Style="{StaticResource ArrowOptionRadio}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Canvas Width="44" Height="16" Margin="0,0,10,0">
                                    <Border Canvas.Left="0" Canvas.Top="6.5" Width="34" Height="3" Background="{DynamicResource GreenAccentBrush}" CornerRadius="1"/>
                                    <Path Canvas.Left="34" Canvas.Top="0"
                                          Data="M0,2 L10,8 L0,14"
                                          Stroke="{DynamicResource GreenAccentBrush}" StrokeThickness="2"
                                          Fill="Transparent" StrokeLineJoin="Miter"/>
                                </Canvas>
                                <TextBlock Text="시작 인과" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="A작업이 끝난 후 B작업 시작"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       FontSize="11"
                                       Margin="54,2,0,0"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="ResetRadio" GroupName="ArrowType" Style="{StaticResource ArrowOptionRadio}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Canvas Width="44" Height="16" Margin="0,0,10,0">
                                    <Line X1="0" Y1="8" X2="34" Y2="8"
                                          Stroke="{DynamicResource OrangeAccentBrush}" StrokeThickness="3"
                                          StrokeDashArray="2,1"/>
                                    <Path Canvas.Left="34" Canvas.Top="0"
                                          Data="M0,2 L10,8 L0,14"
                                          Stroke="{DynamicResource OrangeAccentBrush}" StrokeThickness="2"
                                          Fill="Transparent" StrokeLineJoin="Miter"/>
                                </Canvas>
                                <TextBlock Text="리셋 인과" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="A작업 시작과 동시에 B작업이 리셋"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       FontSize="11"
                                       Margin="54,2,0,0"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="StartResetRadio" GroupName="ArrowType" Style="{StaticResource ArrowOptionRadio}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Canvas Width="44" Height="16" Margin="0,0,10,0">
                                    <Rectangle Canvas.Left="0" Canvas.Top="4" Width="8" Height="8" Fill="{DynamicResource RedAccentBrush}"/>
                                    <Border Canvas.Left="8" Canvas.Top="6.5" Width="26" Height="3" Background="{DynamicResource RedAccentBrush}" CornerRadius="1"/>
                                    <Path Canvas.Left="34" Canvas.Top="0"
                                          Data="M0,2 L10,8 L0,14"
                                          Stroke="{DynamicResource RedAccentBrush}" StrokeThickness="2"
                                          Fill="Transparent" StrokeLineJoin="Miter"/>
                                </Canvas>
                                <TextBlock Text="시작리셋 인과" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="A가 끝나면 B시작과 동시에 A가 리셋"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       FontSize="11"
                                       TextWrapping="Wrap"
                                       Margin="54,2,0,0"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="ResetResetRadio" GroupName="ArrowType" Style="{StaticResource ArrowOptionRadio}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Canvas Width="44" Height="16" Margin="0,0,10,0">
                                    <Path Canvas.Left="0" Canvas.Top="0"
                                          Data="M10,2 L0,8 L10,14"
                                          Stroke="{DynamicResource OrangeAccentBrush}" StrokeThickness="2"
                                          Fill="Transparent" StrokeLineJoin="Miter"/>
                                    <Line X1="10" Y1="8" X2="34" Y2="8"
                                          Stroke="{DynamicResource OrangeAccentBrush}" StrokeThickness="3"
                                          StrokeDashArray="2,1"/>
                                    <Path Canvas.Left="34" Canvas.Top="0"
                                          Data="M0,2 L10,8 L0,14"
                                          Stroke="{DynamicResource OrangeAccentBrush}" StrokeThickness="2"
                                          Fill="Transparent" StrokeLineJoin="Miter"/>
                                </Canvas>
                                <TextBlock Text="상호리셋 인과" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="A와 B가 서로 리셋"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       FontSize="11"
                                       Margin="54,2,0,0"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="GroupRadio" GroupName="ArrowType" Style="{StaticResource ArrowOptionRadio}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Canvas Width="44" Height="16" Margin="0,0,10,0">
                                    <Border Canvas.Left="0" Canvas.Top="6.5" Width="44" Height="3" Background="{DynamicResource AccentBrush}" CornerRadius="1"/>
                                </Canvas>
                                <TextBlock Text="그룹연결" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="그룹 간 연결 (직선)"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       FontSize="11"
                                       Margin="54,2,0,0"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button x:Name="OkButton"
                        Content="확인"
                        Style="{StaticResource DarkButton}"
                        Padding="12,4"
                        Margin="0,0,4,0"
                        IsDefault="True"
                        Click="Ok_Click"/>
                <Button Content="취소"
                        Style="{StaticResource DarkButton}"
                        Padding="12,4"
                        IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
